{
    "name": "minishell",
    
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "workspaceFolder": "/workspace",
    
    "postCreateCommand": "bash .devcontainer/create.sh",
    
    "remoteUser": "vscode"
}